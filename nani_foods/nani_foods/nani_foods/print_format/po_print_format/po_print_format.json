 "font_size": 14,
 "html": "<body> \n      <div class=\"main\">  \n\t\t<table class=\"table\" style=\"width:100%;border-collapse:collapse\">\n            <tbody>\n\t\t\t\t<tr>\n\t\t\t\t\t<td colspan=\"2\" style=\"height:10\">{{letter_head}}</td>\n\t\t\t\t\t<td colspan=\"15\" align=\"center\" style=\"font-size:20px;position:relative;left:10px\"><big><b>Nani Agro Foods Pvt Ltd</b></big>\n\t\t\t    </tr>\n\t\t\t    <tr>\n\t\t\t        <td style=\"border:1px solid black;font-size:10px;line-height: 0.1; color:red\" colspan=\"17\" align = \"center\">Please mention Billing address and Delivery address (Ship To) in Invoice and E-Way bill</td>\n\t\t\t    </tr>\n\t\t\t    {% set u = frappe.get_doc(\"Address\", doc.shipping_address) %}\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"4\"><b>PO No: {{doc.name}}</b></td>\n                    <td align=\"center\" style=\"border:1px solid black;font-size:11px\" rowspan=\"2\" colspan=\"6\"><b>PURCHASE ORDER</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"7\"><b>Date: {{doc.get_formatted('transaction_date')}}</b></td>\n\t\t\t\t</tr>\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"4\"><b>PO Group: {{doc.po_group}}</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"7\"><b>Delivery Period: {{doc.delivery_period or \"\"}}</b></td>\n\t\t\t\t</tr>\n\t\t\t\t{% set u = frappe.get_doc(\"Address\", doc.supplier_address) %}\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 1.0\" colspan=\"4\"><b>Supplier Name and Address:</b> {{u.address_title or \"\"}},{{u.address_line1 or \"\"}},{{u.address_line or \"\"}},{{u.city or \"\"}},{{u.state or \"\"}},{{u.pincode or \"\"}}</td>\n\t\t\t\t\t{% set b = frappe.get_doc(\"Address\", doc.billing_address)%}\n                    <td align=\"center\"  style=\"border:1px solid black;font-size:10px;line-height: 1.0\" colspan=\"6\"><b>Buyer/Receipient Name and Address:</b>{{b.address_title or \"\"}},{{b.address_line1 or \"\"}},{{b.address_line2 or \"\"}},{{b.city or \"\"}},{{b.country or \"\"}},{{b.state or \"\"}},{{b.pincode}}</td>\n                    {% set a = frappe.get_doc(\"Address\",doc.shipping_address)%}\n                    <td align=\"center\" style=\"border:1px solid black;font-size:10px;line-height: 1.0\" colspan=\"7\"><b>Delivery Address:</b>{{a.address_title or \"\"}},{{a.address_line1 or \"\"}},<br>{{a.address_line2 or \"\"}},{{a.city or \"\"}},{{a.state or \"\"}},<br>{{a.country or \"\"}},{{a.pincode or \"\"}}</td>\n\t\t\t\t</tr>\n                <tr>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">GSTIN:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"3\">{{u.tax_id}}</td>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">GSTIN:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"5\">{{a.tax_id}}</td>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">GSTIN:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"6\">{{b.tax_id}}</td>\n\t\t\t\t</tr>\n                <tr>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">State:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">{{u.state}}</td>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.7\" >State Code:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">{{u.state_code}}</td>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">State:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">{{a.state}}</td>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">State Code:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">{{a.state_code}}</td>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\">State:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">{{b.state}}</td>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.7\" >State Code:</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">{{b.state_code}}</td>\n\t\t\t\t</tr>\n                <tr>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>Item Code</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;width:250px\" rowspan=\"2\"><b>Description of Goods/Service</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>Grade</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>HSN/Service Code</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>No.of Units</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>UOM</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>Quantity</b><br><b>(Kgs/Nos/MT)</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>Unit Price INR</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>Amount Excluding Tax INR</b></th>\n                    <th align=\"center\" style=\"border:1px solid black;font-size:10px;\" colspan=\"2\"><b>SGST</b></th>\n                    <th align=\"center\" style=\"border:1px solid black;font-size:10px;\" colspan=\"2\"><b>CGST</b></th>\n                    <th align=\"center\" style=\"border:1px solid black;font-size:10px;\" colspan=\"2\"><b>IGST</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>Tax Amount(INR)</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;\" rowspan=\"2\"><b>Total Amount including Tax(INR)</b></th>\n\t\t\t\t</tr>\n\t\t\t\t<tr>\n                    <th style=\"border:1px solid black;font-size:10px;line-height: 0.2\"><b>SGST</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;line-height: 0.2\"><b>Amnt</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;line-height: 0.2\"><b>CGST</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;line-height: 0.2\"><b>Amnt</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;line-height: 0.2\"><b>IGST</b></th>\n                    <th style=\"border:1px solid black;font-size:10px;line-height: 0.2\"><b>Amnt</b></th>\n\t\t\t\t</tr>\n\t\t\t\t{% set vars_a = {'total_qty': 0} %}\n\t\t\t\t{% set vars_b = {'total_up': 0} %}\n\t\t\t\t{% set vars_c = {'total_amnt': 0} %}\n\t\t\t\t{% for row in doc.items %}\n                <tr>\n                    {% set item_doc = frappe.get_doc(\"Item\", row.item_code) %}\n                    <td style=\"border:1px solid black;font-size:8px;\">{{row.item_code or \"\"}}</td>\n                    <td style=\"border:1px solid black;font-size:8px;\">\n                        {{row.item_name}}\n                        {%if item_doc.type_of_the_material == \"Lab Material\" %}\n                        - {{ item_doc.brand1 or \"\" }}  {{ item_doc.item_name_extention or \"\" }}\n                        {% endif %}\n                    </td>\n                    <td style=\"border:1px solid black;font-size:8px;\">\n                        {%if item_doc.type_of_the_material == \"Lab Material\" %}\n                        {{ item_doc.grade or \"\" }}\n                        {% endif %}\n                    </td>\n\t\t\t\t\t{% set t = frappe.get_doc(\"Item\", row.item_code) %}\n                    <td style=\"border:1px solid black;font-size:8px;\">{{t.hsn_code or \"\"}}</td>\n                    <td style=\"border:1px solid black;font-size:8px;\">{{row.no_of_units  or \"\"}}</td>\n                    <td style=\"border:1px solid black;font-size:8px;\">{{row.uom  or \"\"}}</td>\n                    <td style=\"border:1px solid black;font-size:8px;\">{{row.qty | int or \"\"}}</td>\n\t\t\t\t\t{% if vars_a.update({'total_qty': vars_a.total_qty + row.qty}) %}{% endif %}\n                    <td style=\"border:1px solid black;font-size:8px;\">{{row.rate  or \"\"}}</td>\n\t\t\t\t\t{% if vars_b.update({'total_up': vars_b.total_up + row.rate }) %}{% endif %}\n                    <td style=\"border:1px solid black;font-size:8px;\">{{row.amount  or \"\"}}</td>\n\t\t\t\t\t{% if vars_c.update({'total_amnt': vars_c.total_amnt + row.amount }) %}{% endif %}\n\t\t\t\t\t\n                    {% set itr = json.loads(row.item_tax_rate) %}\n                    {% set amt_dict = {'sgst_amt': [], 'cgst_amt': [], 'igst_amt': []} %}\n                    \n                    {% set tax_total = [] %}\n                    \n                    {% for key, value in itr.items() %}\n                        {% if 'SGST' in key %}\n                            {% set _ = amt_dict['sgst_amt'].append(value) %}\n                            {% set _ = amt_dict['sgst_amt'].append(row.amount * (value / 100)) %}\n                            {% set _ = tax_total.append(row.amount * (value/100))%}\n                        {% endif %}\n                        {% if 'CGST' in key %}\n                            {% set _ = amt_dict['cgst_amt'].append(value) %}\n                            {% set _ = amt_dict['cgst_amt'].append(row.amount * (value / 100)) %}\n                            {% set _ = tax_total.append(row.amount * (value/100))%}\n                        {% endif %}\n                        {% if 'IGST' in key %}\n                            {% set _ = amt_dict['igst_amt'].append(value) %}\n                            {% set _ = amt_dict['igst_amt'].append(row.amount * (value / 100)) %}\n                            {% set _ = tax_total.append(row.amount * (value/100))%}\n                        {% endif %}\n                    {% endfor %}\n                    {% for key, value in amt_dict.items() %}\n    \t\t\t\t\t<td style=\"border:1px solid black;font-size:8px;\">{% if value[0] %} {{value[0]}}% {% endif %}</td>    \t\n\t\t\t\t\t    <td style=\"border:1px solid black;font-size:8px;\">{% if value[1] %} {{\"%.3f\"|format(value[1])}} {% endif %}</td>    \t\n                    {% endfor %}\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.2\">{{ \"%.3f\"| format(tax_total | sum) }}</td> \n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.2\">{{ \"%.2f\" | format(row.amount + (tax_total | sum)) }}</td> \n                </tr>\n                {% endfor %}\n                <tr>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.2\" colspan=\"8\"></td>\n                    <th style=\"border:1px solid black;font-size:8px;line-height: 0.2\" colspan=\"3\"><b>Total Discount Amount:{{doc.discount_amount}}</b></th>\n\t\t\t\t\t{% set vars_d = {'total_oc': 0} %}\n\t\t\t\t\t{% for r in doc.taxes %}\n\t\t\t\t    {% if r.account_head == \"P & F Charge - NAF\" or r.account_head == \"Freight and Forwarding Charges - NAF\" %}\n\t\t\t\t\t{% if vars_d.update({'total_oc': vars_d.total_oc + r.tax_amount or r.account_head == \"Freight and Forwarding Charges - NAF\"  }) %}{% endif %}\n\t\t\t\t\t{% endif %}\n\t\t\t\t\t{% endfor %}\n                    <th style=\"border:1px solid black;font-size:8px;line-height: 0.2\" colspan=\"5\"><b>Other Charges(Freight/Packing/forwarding):</b></th>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.2\"></td>\n\n\t\t\t\t</tr>\n                <tr>\n                    <td align=\"center\" style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"6\"><b>Total</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" >{{vars_a.total_qty | int}}</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" >{{vars_b.total_up}}</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\" >{{vars_c.total_amnt}}</td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">\n                        {% for row in doc.taxes %}\n                            {% if 'SGST' in row.account_head %}\n                                {{ row.tax_amount }}\n                            {% endif %}\n                        {% endfor %}\n                    </td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">\n                        {% for row in doc.taxes %}\n                            {% if 'CGST' in row.account_head %}\n                                {{ row.tax_amount }}  \n                            {% endif %}\n                        {% endfor %}\n                    </td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"2\">\n                        {% for row in doc.taxes %}\n                            {% if 'IGST' in row.account_head %}\n                                {{ row.tax_amount }}\n                            {% endif %}\n                        {% endfor %}\n                    </td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" >{{doc.rounded_total}}</td>\n                </tr>\n                <tr>\n                    <td align=\"center\" style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"4\"><b>Total Amount(In words): </b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"13\">***{{doc.in_words[4:]}}</td>\n                </tr>\n                <tr>\n                    <td  style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Currency</b></td>\n                    <td  style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\">{{doc.currency or \"\"}}</td>\n                </tr>\n                <tr>\n                    <td  style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Transport Via</b></td>\n                    <td  style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\"></td>\n                </tr>\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Terms of Shipment</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\"></td>\n                </tr>\n                <tr>\n                    <td  style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Port of Import</b></td>\n                   <td  style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\"></td> \n                </tr>\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Port of Loading</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\"></td>\n                </tr>\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Delivery Date</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\">{{doc.get_formatted(\"schedule_date\")}}</td>\n                </tr>\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Payment Terms</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\">{{doc.payment_terms_template or \"\"}}</td>\n                </tr>\n                <tr>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"4\"><b>Quality Specification</b></td>\n                    <td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan = \"13\"></td>\n                </tr>\n                <tr>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:8px;height:50px\" colspan=\"17\"><b>Terms and Conditon:</b> <br>{{doc.terms or \"\"}}</td>\n\t\t\t\t</tr>\n\t\t\t\t<tr>\n\t\t\t\t\t<td style=\"border:1px solid black;font-size:10px;line-height: 0.1\" colspan=\"17\">\n                    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><h6 align=\"right\" style=\"font-size:10px;line-height:0.1\">For Nani Agro Foods (P) Ltd.</h6>\n\t\t\t\t\t<h6 align=\"right\" style=\"font-size:10px;line-height:0.1\">Authorized Signatory</h6><br><hr>\n\t\t\t\t\t<h6 align=\"center\" style=\"font-size:10px;line-height:0.1\">Factory.  :  SF No 444/1-5, Mukasipidariyur village, Pulapallimedu, R.S road, Chennimalai - Erode. Tamil Nadu - 638051</h6>\n\t\t\t\t\t<h6 align=\"center\" style=\"font-size:10px;line-height:0.1\">www.nani.co.in</h6>\n\t\t\t\t\t<h6 align=\"center\" style=\"font-size:10px;line-height:0.1\">This is Computer Generated Purchase order hence does not require Signature</h6>\n\t\t\t\t\t</td>\n\t\t\t\t</tr>\n\t\t\t</tbody>\n\t\t</table>\n\t</div>\n</body>",
